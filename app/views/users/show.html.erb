<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="https://static.vecteezy.com/system/resources/previews/009/292/244/non_2x/default-avatar-icon-of-social-media-user-vector.jpg" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= @user.name %></h5>
    <p class="card-text"><%= @user.email %></p>
		<%= link_to "Usuarios", users_path, class: "btn btn-primary" %>
		<% if current_user?(@user) %>
			<%= link_to "Editar", edit_user_path(@user), class: "btn btn-warning" %>
			<%= link_to "Borrar", user_path(@user), data: { turbo_method: :delete }, class: "btn btn-danger" %>
		<% end %>
  </div>
</div>