<h1 class="mb-3 text-center">Nuevo Servicio para <%= link_to @car.plate_number, @car %></h1>

<%= form_with(model: [@car, @maintenance_service], local: true) do |f| %>
  <div class="d-flex justify-content-center">
    <div class="card text-bg-dark w-50">
      <div class="card-header">
        Formulario de Servicios
      </div>
      <div class="card-body">
        <%= render 'shared/errors', object: @maintenance_service%>
        <div class="mb-3">
          <%= f.label :description, "Descripción", { class: "form-label"} %>
          <%= f.text_field :description, { class: "form-control", placeholder: "Ingrese la descripción" } %>
        </div>
        <div class="mb-3">
          <%= f.label :status, "Estado", { class: "form-label"} %>
          <%= f.text_field :status, { class: "form-control", placeholder: "Ingrese el estado" } %>
        </div>
        <div class="mb-3">
          <%= f.label :date, "Fecha", { class: "form-label"} %>
          <%= f.datetime_select :date, { class: "form-control"} %>
        </div>
        <%= f.submit "Guardar", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>